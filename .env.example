# =============================================================================
# BNB SMART CHAIN (BSC) CONFIGURATION
# =============================================================================

# BNB Smart Chain Configuration
# Network: 'mainnet' or 'testnet'
NEXT_PUBLIC_BNB_NETWORK=testnet

# BNB RPC Endpoint
NEXT_PUBLIC_BNB_RPC_ENDPOINT=https://bsc-testnet.publicnode.com

# WalletConnect Project ID (Required for Wagmi/ConnectKit)
# Get one at https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=325170d18b14619d80d19f170af170ef

# =============================================================================
# TREASURY CONFIGURATION
# =============================================================================

# Treasury Configuration
# Public address where deposits are sent
NEXT_PUBLIC_TREASURY_ADDRESS=0x999d211dE1F1d0E41282af54ABECc6A9550ffD35

# Private key for the treasury wallet (Backend only - secure this!)
# Used for processing withdrawals
BNB_TREASURY_SECRET_KEY=PLACE_HOLDER_SECRET_KEY

# =============================================================================
# STELLAR CONFIGURATION
# =============================================================================

# Stellar Network Configuration
# Network: 'public' or 'testnet'
NEXT_PUBLIC_STELLAR_NETWORK=public

# Stellar Horizon URL
# Mainnet: https://horizon.stellar.org
# Testnet: https://horizon-testnet.stellar.org
NEXT_PUBLIC_STELLAR_HORIZON_URL=https://horizon.stellar.org

# Stellar Treasury Secret Key (Backend only - secure this!)
# Used for processing withdrawals (format: S...)
STELLAR_TREASURY_SECRET=PLACE_HOLDER_SECRET_KEY

# =============================================================================
# NEAR CONFIGURATION
# =============================================================================

# NEAR Network: mainnet
NEXT_PUBLIC_NEAR_NETWORK=mainnet

# NEAR Treasury Account ID
NEXT_PUBLIC_NEAR_TREASURY_ADDRESS=binomo.near

# NEAR Treasury Secret Key (Backend only - secure this!)
# Used for processing withdrawals (Private Key string)
NEAR_TREASURY_ACCOUNT_ID=binomo.near
NEAR_TREASURY_PRIVATE_KEY=PLACE_HOLDER_SECRET_KEY

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase Project URL
# Get this from your Supabase project dashboard:
# 1. Go to https://supabase.com/dashboard
# 2. Select your project
# 3. Go to Settings > API
# 4. Copy the "Project URL" (e.g., https://abcdefghijklmnop.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url

# Supabase Anonymous Key
# Get this from your Supabase project dashboard:
# 1. Go to https://supabase.com/dashboard
# 2. Select your project
# 3. Go to Settings > API
# 4. Copy the "anon public" key from "Project API keys"
# This key is safe to use in client-side code
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Name
# The name of your application (displayed in UI)
NEXT_PUBLIC_APP_NAME=Overflow

# Round Duration
# Duration of each betting round in seconds
# Default: 30 seconds
NEXT_PUBLIC_ROUND_DURATION=30

# Price Update Interval
# How often to fetch BTC price updates in milliseconds
# Default: 1000ms (1 second)
NEXT_PUBLIC_PRICE_UPDATE_INTERVAL=1000

# Chart Time Window
# Time window for the price chart in milliseconds
# Default: 300000ms (5 minutes)
NEXT_PUBLIC_CHART_TIME_WINDOW=300000
